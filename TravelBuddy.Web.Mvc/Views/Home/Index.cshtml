@using TravelBuddy.Shared.Contracts.Reservations
@using System.Globalization
@model IEnumerable<ReservationDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Minhas Reservas";
    var culture = new CultureInfo("pt-BR");
}

<h2 class="tb-title">Minhas Reservas</h2>

@if (!Model.Any())
{
    <p class="tb-empty">Nenhuma reserva encontrada.</p>
}
else
{
    <ul class="tb-list">
        @foreach (var r in Model)
        {
            <li class="tb-card">
                <div class="tb-card-heading">
                    <span class="tb-name">@r.CustomerName</span>
                    <span class="tb-price">@r.TotalPrice.ToString("C", culture)</span>
                </div>
                <div class="tb-meta">
                    <span>🗓 @r.TravelDate.ToString("dd/MM/yyyy")</span>
                    <span>📍 Destino: @r.DestinationId</span>
                    <span>👥 @r.NumberOfPeople pessoa(s)</span>
                </div>
            </li>
        }
    </ul>
}
