<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelBuddy</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="tb-navbar">
        <div class="tb-container">
            <div class="tb-brand">TravelBuddy</div>
        </div>
    </header>

    <main role="main" class="tb-container">
        @RenderBody()
    </main>

    <footer class="tb-footer">
        <div class="tb-container">© @DateTime.Now.Year - TravelBuddy</div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
